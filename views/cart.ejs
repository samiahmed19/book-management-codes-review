<html>

<head>
    <title>My Cart</title>
    <link rel="stylesheet" href="/styles/cart.css">
</head>

<body>
    <div class="header">
        <h1>My Cart</h1>
        <a href="/profile"><button>Home</button></a>
        <a href="/profile/get-books"><button>Back to All Books</button></a>
        <a href="/total"><button>Check Out</button></a>

    </div>
    <ul>
        <%for(i of book_list){%>
            <li>
                <p><strong>Title: </strong>
                    <%=i.title%>
                </p>
                <p><strong>Author: </strong>
                    <%=i.author%>
                </p>
                <p><strong>ISBN: </strong>
                    <%=i.isbn%>
                </p>
                <p><strong>Price: </strong>
                    <%=i.price%>
                </p>
                <p><strong>Quantity: </strong>
                    <%=i.quantity%>
                </p>
                <form action="/update-quantity" method="POST">
                    <input type="hidden" name="book_data" value="<%= JSON.stringify(i) %>">
                    <label for="quantity"><strong>Update Quantity:</strong></label>
                    <input type="number" id="quantity" name="quantity" min="1" value="1">
                    <button type="submit" id="submit" style="display:inline-block;">Update</button>
                </form>
                <button style="display:block;"><a href="/delete-cart-book/?id=<%=i._id%>">Delete Book</a></button>
            </li>
            <%}%>
    </ul>
</body>

</html>